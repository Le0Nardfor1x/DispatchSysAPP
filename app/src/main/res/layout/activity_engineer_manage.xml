<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EngineerManageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:text="您当前所处位置为："
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/engineer_location_text"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginStart="15dp"
            android:id="@+id/commit_location_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交当前位置"
            android:textSize="16sp" />
        <Button
            android:layout_marginStart="15dp"
            android:id="@+id/check_mission_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看任务记录"
            android:textSize="16sp" />
    </LinearLayout>
    <Button
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:id="@+id/engineer_back_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:textSize="16sp" />
    <com.amap.api.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>